---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  tags?: string[];
  readingTime?: string;
  wordCount?: number;
}

const { title, description, pubDate, updatedDate, tags, readingTime, wordCount } = Astro.props;

function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
}
---

<BaseLayout title={`${title} - Logan Reeder`} description={description}>
  <article class="prose mx-6">
    <header class="mb-8">
      <h1 class="mb-2">{title}</h1>
      <p class="text-sm text-muted-foreground">
        <time datetime={pubDate.toISOString()}>{formatDate(pubDate)}</time>{updatedDate ? (
          <Fragment> (updated <time datetime={updatedDate.toISOString()}>{formatDate(updatedDate)}</time>)</Fragment>
        ) : null}{readingTime ? (
          <Fragment> &middot; {readingTime}</Fragment>
        ) : null}{wordCount ? (
          <Fragment> &middot; {wordCount.toLocaleString()} words</Fragment>
        ) : null}
      </p>
      {tags && tags.length > 0 && (
        <div class="mt-2 flex gap-2">
          {tags.map((tag) => (
            <span class="rounded-sm bg-secondary px-2 py-0.5 text-xs font-medium text-secondary-foreground">
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>
    <slot />
  </article>
</BaseLayout>
